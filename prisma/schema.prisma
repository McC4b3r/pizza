generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model toppings {
  id     Int      @id @default(autoincrement())
  name   String   @db.VarChar
  pizzas pizzas[]
}

model pizzas {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar
  toppings toppings[]
}
